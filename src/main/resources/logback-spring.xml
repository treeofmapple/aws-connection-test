<configuration>
  <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
    <http>
      <url>${LOKI_URL}</url>
      <user>${LOKI_USER}</user>
      <password>${LOKI_PASSWORD}</password>
    </http>
    
    <label>
      <pattern>app=${spring.application.name},level=%level</pattern>
    </label>
    
    <encoder class="com.github.loki4j.logback.json.JsonEncoder">
      <pattern>
        {
          "timestamp":"%date",
          "level":"%level",
          "thread":"%thread",
          "logger":"%logger",
          "message":"%msg"
        }
      </pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="LOKI"/>
  </root>
</configuration>